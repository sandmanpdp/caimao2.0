/* 导航 */
.nav{padding: 0 10%;height: 80rpx;background-color: #2772ff}
.nav_box{width: 50%;height: 100%;text-align: center;font-size: 36rpx;line-height: 36rpx;color: #b9b9b9}
.co_write{color: #fff}
.c0b9b9b9{color: #b9b9b9}
.box .c0b9b9b9{color: #b9b9b9!important}
/* 列表 */
.box{margin: 10rpx 0 0;padding: 0 30rpx;height: 100rpx;background: #fff}
.textareaBox{margin: 10rpx 0 0;padding: 0 30rpx;background: #fff}
.box:first-child{margin: 0}
.box:nth-child(2),.box:nth-child(4),.box:nth-child(6),.box:nth-child(14){margin: 0;border-top: 2rpx solid #eeeeee}
.box:nth-child(7),.box:nth-child(12){margin: 0;border-bottom:2rpx solid #eeeeee;line-height: 100rpx;font-size: 26rpx;color: #b9b9b9} 
.box:nth-child(8){margin: 0;padding: 14rpx 30rpx 0;background-color: #f5f5f9;height: 202rpx}  
.box:nth-child(9),.box:nth-child(10),.box:nth-child(11),.box:nth-child(13){margin: 0}
.box:nth-child(9),.box:nth-child(10),.box:nth-child(14){border-bottom: 2rpx solid #eeeeee}
.box_title{margin-right: 110rpx;font-size: 34rpx;color: #2e2e2e;line-height: 100rpx}
.box_logicTitle{margin-right: 100rpx;font-size: 34rpx;color: #2e2e2e;line-height: 100rpx}
/*  by pdp  */
.box_title_relatedNote {
  font-size: 34rpx;color: #2e2e2e;line-height: 100rpx;margin-right: 42rpx;
}
.box_value{position: relative;width: 506rpx;height: 100%}
.box_input{height: 100%;font-size: 34rpx;color:#2e2e2e;}
.box_input_placeholder{color: #b9b9b9}
.box_picker_date,.box_picker_date view{width: 100%;height: 100rpx;line-height: 100rpx;color: #b9b9b9;font-size: 30rpx}
.box_picker_icon{position: absolute;top: 41rpx;right: 0;width: 34rpx;height: 19rpx}
.logic_input{box-sizing: border-box;padding: 20rpx 0 20rpx;height: 100%;font-size: 34rpx}
.logic_input_placeholder{color: #b9b9b9;}
.label_title{margin-right: 34rpx;font-size: 26rpx;color: #808080}
.label_value{padding: 20rpx 0 0;width: 570rpx}
.label_box{position: relative;margin: 0 38rpx 18rpx 0;width: 160rpx;height: 60rpx;border: 2rpx solid #b9b9b9;border-radius: 10rpx;line-height: 60rpx;text-align: center;font-size: 26rpx;color: #b9b9b9}
.label_box:nth-child(3),.label_box:nth-child(6){margin: 0}
.label_box_icon{position: absolute;bottom: 0;right: 0;width: 25rpx;height: 25rpx;background-color: #b9b9b9;border-top-left-radius: 6rpx;border-bottom-right-radius: 6rpx}
.label_box_icon_circle{position: relative;top: -16rpx;left: 1rpx}
.co_blue{color: #2772ff;border-color: #2772ff}
.bc_blue{background-color: #2772ff}
.prict{color: #fc7946!important;font-size: 34rpx!important}
.box_picker_notice_icon{margin: 33rpx 0 0;width: 19rpx;height: 34rpx}
.reading{margin: 80rpx auto 0;width: 690rpx;border-radius: 10rpx;height: 100rpx;line-height: 100rpx;text-align: center;color: #fff;font-size: 40rpx;background-color: #2772ff}
.logic_textarea{padding: 21rpx 0 22rpx 0;width: 100%;font-size: 34rpx;min-height: 30rpx;color:#2e2e2e;text-align: justify}
.box_textarea{height: auto!important}

/* 观点 */
.viewpoint{margin: 20rpx 0 0;height: 1000rpx}
.box_viewpoint{width: 100%}
.viewpoint .box:nth-child(3),.viewpoint .box:nth-child(5){margin: 0!important;border-top:2rpx solid #eeeeee}
.viewpoint .box:nth-child(4),.viewpoint .box:nth-child(6){margin: 20rpx 0 0;border: 0}
/* 规则 */
.mask>view{position: absolute;top: 50%;left: 50%;margin-left: -300rpx;width: 600rpx;transform: translateY(-60%);background-color: #fff;border-radius: 30rpx}
.mask>view>view:nth-child(1){line-height: 105rpx;border-bottom: 1px solid #dddddd;text-align: center;font-size: 36rpx;color: #fc7946}
.mask>view>view:nth-child(2){padding: 40rpx 40rpx 10rpx 40rpx}
.mask>view>view:nth-child(2) view{padding-bottom: 12rpx;font-size: 26rpx;color: #808080}
.mask>view>view:nth-child(3){margin: 15rpx 0 50rpx;text-align: center;font-size: 34rpx;color: #2772ff}
.mask>view image{position: absolute;bottom: -120rpx;left: 50%;margin-left: -23.5rpx;width: 47rpx;height: 47rpx}
/* 股票代码遮罩 */
.codeMask{box-sizing: border-box;position: absolute;left: 0;padding: 50rpx 10% 20rpx;width: 100%;background: #f0f0f0;z-index: 99}
.codeMask>view{float: left;padding: 0 0 30rpx 0;width: 42%;font-size: 24rpx;color: #666}
.codeMask>view:nth-child(even){float: right}
.codeMaskTop{top: 100%}
.codeMaskBottom{bottom:100%}
/* 百分号 */
.percent{position: absolute;right: 30rpx;top: 50%;transform: translateY(-50%);font-size: 30rpx}

.readMask{position:fixed;top:0;left:0;width:100%;height:100vh;background-color:rgba(0,0,0,.5);z-index:999999999}
.readBox{position: absolute;top: 50%;left: 50%;width: 600rpx;transform: translate3d(-50%,-50%,0)}
.readContent{padding: 40rpx;background-color: #fff;min-height: 200rpx;border-radius: 30rpx;font-size: 28rpx;color: #3e3e3e}
.readContent>view{margin-bottom: 14rpx}
.readContent>view>view:nth-child(1){margin-right: 40rpx}
.readContent>view>view:nth-child(2){width: 80%}
.readLable{font-size: 24rpx;color: #2772ff;text-align: center}
.readBtn{margin-top: 30rpx;padding: 0 20rpx;height: 100rpx}
.readBtn view:nth-child(1){box-sizing: border-box;width: 250rpx;height: 80rpx;line-height: 78rpx;border: 1px solid #fff;font-size: 32rpx;text-align: center;color: #fff;border-radius: 12rpx}
.readBtn view:nth-child(2){box-sizing: border-box;width: 250rpx;height: 80rpx;line-height: 80rpx;font-size: 32rpx;text-align: center;color: #fff;background-color: #2772ff;border-radius: 12rpx}
/*  by pdp */
.close {
  width:20%;
  height:11%;
  bottom:90%;
  position:absolute;
  left:65%;
}
.shareBtnBox {
  opacity: 0;
  width:50%;
  height:14%;
  top:74%;
  position:absolute;
  left:23%;
}
.shareBtn{
  background:transparent;
  border: 1px solid transparent;
  width:100%;
  height:100%;
  padding:0 0;
  margin:0 0;
}
.viewHeightAuto {
  height: auto;
}
.publishSuccessImg {
  width:100%;
  height:500rpx;
}