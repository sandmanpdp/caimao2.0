.bb{border-bottom: 2px solid #2772ff;color: #2772ff}
.o{height: 100vh;overflow: hidden}
/* 内容 */
.section{padding: 30rpx 30rpx 20rpx 30rpx;background-color: #fff}
.section image{margin-right: 20rpx;width: 48rpx;height: 48rpx;border-radius: 6rpx}
.section text{font-size: 28rpx;color: #808080;line-height: 48rpx}
.section .text{margin: 30rpx 0 40rpx;font-size: 32rpx;color: #2e2e2e;word-break:break-all}
.section .answer{position: relative;padding: 41rpx 0;background-color: #f9f9f9;text-align: center}
.section .answer view:nth-child(1){font-size: 40rpx;color: #fc7946;line-height: 40rpx}
.section .answer view:nth-child(2){margin: 20rpx 0 29rpx;font-size: 28rpx;color: #808080;line-height: 28rpx}
.section .answer view:nth-child(3){margin: 0 auto;width: 240rpx;height: 72rpx;font-size: 32rpx;color: #fff;line-height: 72rpx;background-color: #fc7946;border-radius: 36rpx}
.section .answer image{position: absolute;top: 30rpx;right: 10rpx;width: 31rpx;height: 31rpx}
/* 列表 */
.list{background-color: #fff}
.list .nav{padding: 0 30rpx;height: 86rpx;line-height: 86rpx;border-bottom: 1px solid #dddddd;font-size: 30rpx;color: #b9b9b9}
.list .nav view{height: 86rpx;box-sizing: border-box}
.list .nav view:nth-child(1){margin-right: 80rpx}
.list .box{margin-top: 10rpx;padding: 30rpx 30rpx 44rpx 30rpx}
.list .box:last-child{margin: 0}
.list .box .title image{margin-right: 20rpx;width: 48rpx;height: 48rpx;border-radius: 6rpx}
.list .box .title text{font-size: 28rpx;color: #808080;line-height: 48rpx}
.list .box .title view{width: 120rpx;height: 44rpx;border: 1px solid #2772ff;border-radius: 4rpx;font-size: 26rpx;color: #2772ff;text-align: center;line-height: 44rpx}
.list .box .text{margin: 29rpx 0 40rpx;font-size: 30rpx;color: #2e2e2e;word-break:break-all}
.list .box .fun{font-size: 0}
.list .box .fun image{margin-right: 20rpx;width: 26rpx;height: 26rpx;vertical-align: middle}
.list .box .fun text{font-size: 30rpx;color: #b9b9b9;line-height: 30rpx;vertical-align: middle}
/* 下拉提示 */
.drop{margin-bottom: 110rpx}
/* 评论 */
.comment{box-sizing: border-box;position: fixed;bottom: 0;left: 0;padding: 20rpx 32rpx;width: 100%;height: 110rpx;background-color: #fff;z-index: 99999}
.comment .input{box-sizing: border-box;padding: 0 40rpx;width: 370rpx;height: 70rpx;border: 1px solid #dddddd;border-radius: 10rpx;font-size: 28rpx;color: #939393}
.comment image{margin-top: 12.5rpx;width: 49rpx;height: 47rpx}
.comment image:nth-child(3){margin-right: 54rpx}
.comment>view{position: relative;margin: 12.5rpx 60rpx 0 54rpx;}
.comment>view image{margin: 0}
.comment>view .number{position: absolute;top: -15rpx;left: 50%;padding: 5rpx 11rpx;font-size: 22rpx;line-height: 24rpx;color: #ffffff;border: 1rpx solid #fff;background-color: #e32f37;border-radius: 17rpx}
