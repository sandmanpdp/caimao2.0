<!-- 收货人 -->
<view class='clearfix box'>
  <view class='fl'>收货人</view>
  <input class='fl' placeholder='输入收货人姓名'></input>
</view>
<!-- 手机号码 -->
<view class='clearfix box'>
  <view class='fl'>手机号码</view>
  <input type='number' class='fl' placeholder='输入手机号码' maxlength='11'></input>
</view>
<!-- 省份 -->
<view class='clearfix box'>
  <view class='fl'>省市区</view>
  <picker class='fl' mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
    <view class="picker">
      {{region[0]}}，{{region[1]}}，{{region[2]}}
    </view>
  </picker>
</view>
<!-- 街道 -->
<view class='clearfix box'>
  <view class='fl'>详细地址</view>
  <input class='fl' placeholder='输入详细地址'></input>
</view>
<!-- 邮编 -->
<view class='clearfix box'>
  <view class='fl'>邮政编码</view>
  <input type='number' class='fl' placeholder='输入邮政编码' maxlength='6'></input>
</view>
