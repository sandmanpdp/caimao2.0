/* pages/myAddress/myAddress.wxss */
view {
  font-size: 32rpx;
}
.userName_box,.tele_box,.addressDetails_box,.code_box{
  width: 100%;
  background: #fff;
  height: 90rpx;
  margin: 10rpx 0;
  padding: 10rpx;
  box-sizing: border-box;
}

.province_box {
  width: 100%;
  height: 90rpx;
  margin: 10rpx 0;
  padding: 10rpx;
  box-sizing: border-box;
}

.province,.city,.district {
  width: 31.5%;
  background: #fff;
  margin: 0 1%;
}
.province {
  margin-left:0 !important; 
}

.province_box picker {
  height: 100%;
  width: 100%;
}

.province_box picker view {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 1%;
  text-align: center;
  box-sizing: border-box;
  overflow:hidden;
}

.userName_title , .tele_title ,.addressDetails_title ,.code_title {
  width: 25%;
  height: 100%;
}
.userName_input , .tele_input ,.addressDetailse_input,.code_input {
  width: 70%;
  height: 100%;
}
.userName_content ,.tele_content,.addressDetails_content,.code_content {
  box-sizing: border-box;
  padding: 15rpx;
  width: 100%;
  height: 100%;
  font-size: 35rpx;
}
.commitBtn_box {
  box-sizing: border-box;
  width: 100%;
  margin: 50rpx 0rpx;
  padding: 30rpx;
}
.commitBtn {
  color: #fff;
  text-align: center;
  width: 100%;
  padding: 20rpx 0 ;
  background: #2772FF;
  border-radius: 10rpx;
}
.page-body {
  overflow-x: hidden;
}
picker {
  box-sizing: border-box;
}
.Addressinput {
  height: 100%;
  font-size:28rpx; 
}