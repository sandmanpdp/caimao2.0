/* 头部 */
.head{font-size: 0}
.head .banner{width: 100%}
.head .box{box-sizing: border-box;position: absolute;top: 0;left: 0;padding: 55rpx 30rpx;width: 100%}
.head .box .left{width: 50%;color: #fff}
.head .box .left view:nth-child(1){font-size: 30rpx;line-height: 30rpx}
.head .box .left view:nth-child(1) image{margin-left: 10rpx;width: 30rpx;height: 30rpx;vertical-align: middle}
.head .box .left view:nth-child(2){margin: 35rpx 0 15rpx;font-size: 88rpx;line-height: 80rpx}
.head .box .left view:nth-child(3){font-size: 30rpx;line-height: 30rpx}
.head .box .right{position: absolute;top: 50%;right: 0;transform: translateY(-50%);width: 247rpx;height: 98rpx}

/* 导航 */
.nav{padding: 30rpx 0;background-color: #fff;height: 132rpx}
.nav>view{margin-left: 80rpx;width: 104rpx;height: 132rpx;text-align: center}
.nav>view:nth-child(1){margin-left: 46rpx}
.nav>view image{width: 89rpx;height: 88rpx}
.nav>view view{font-size: 26rpx;color: #333333}

/* 主体 */
.section{margin-top: 20rpx;padding: 30rpx;background-color: #fff}
.section .title view:nth-child(1){width: 10rpx;height: 32rpx;background-color: #2772ff}
.section .title view:nth-child(2){margin-left: 20rpx;font-size: 32rpx;font-weight: 600;color: #333333;line-height: 32rpx}
.section .box{margin-top: 38rpx;height: 162rpx;overflow: hidden}
.section .box>view:nth-child(1){box-sizing: border-box;padding: 20rpx;width: 70%;height: 100%;border: 2rpx solid #eee;border-right: 0;border-radius: 20rpx}
.section .box>view:nth-child(2){box-sizing: border-box;width: 30%;height: 100%;border: 2rpx solid #eee;border-left: 0;border-radius: 20rpx;background-color: #ffc45f;text-align: center;line-height: 158rpx;color: #fff}
.section .box>view:nth-child(3),.section .box view:nth-child(4){position: absolute;left: 70%;transform: translateX(-50%);width: 30rpx;height: 30rpx;border: 2rpx solid #eee;border-radius: 50%;background-color: #fff;font-size: 40rpx}
.section .box>view:nth-child(3){top: -15rpx}
.section .box>view:nth-child(4){bottom: -15rpx}
.section .box>view .icon{width: 120rpx;height: 120rpx}
.section .box>view .depict{margin-left: 30rpx}
.section .box>view .depict view:nth-child(1){margin-top: 8rpx;font-size: 36rpx;color: #333333;line-height: 26rpx;font-weight: 400}
.section .box>view .depict view:nth-child(2){margin: 10rpx 0 14rpx;font-size: 26rpx;color: #999999;line-height: 36rpx}
.section .box>view .depict view:nth-child(3){font-size: 26rpx;color: #fc7946;line-height: 26rpx}

/* 规则 */
.mask>view{position: absolute;top: 50%;left: 50%;margin-left: -300rpx;width: 600rpx;transform: translateY(-60%);background-color: #fff;border-radius: 30rpx}
.mask>view>view:nth-child(1){line-height: 105rpx;border-bottom: 1px solid #dddddd;text-align: center;font-size: 36rpx;color: #fc7946}
.mask>view>view:nth-child(2){padding: 40rpx 40rpx 10rpx 40rpx}
.mask>view>view:nth-child(2) view{padding-bottom: 12rpx;font-size: 26rpx;color: #808080}
.mask>view>view:nth-child(3){margin: 15rpx 0 50rpx;text-align: center;font-size: 34rpx;color: #2772ff}
.mask>view image{position: absolute;bottom: -120rpx;left: 50%;margin-left: -23.5rpx;width: 47rpx;height: 47rpx}
