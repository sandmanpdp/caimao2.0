
.list_box{box-sizing: border-box;margin-top: 20rpx;padding: 30rpx 30rpx 36rpx;background-color: #fff}
.list_box_top_authorHead{position: relative;width: 82rpx;height: 82rpx}
.list_box_top_authorHead_img{width: 100%;height: 100%;border-radius: 50%}
.list_box_top_authorInfo{margin: 0 0 0 32rpx}
.list_box_top_authorInfo_name{margin: 6rpx 0 12rpx;line-height: 34rpx;font-size: 34rpx;color: #333333}
.list_box_top_authorInfo_depict{font-size: 24rpx;color: #999999}
.list_box_top_authorInfo_icon{margin: 15rpx 0 0}
.list_box_bottom{margin: 36rpx 0 0 110rpx;width: 580rpx;}
.list_box_bottom_box{margin: 0 80rpx 0 0}
.list_box_bottom_box:last-child{margin: 0}
.list_box_bottom_box:nth-child(1) view:nth-child(1){line-height: 38rpx;font-size: 38rpx;color: #3e3e3e}
.list_box_bottom_box:nth-child(2) view:nth-child(1){line-height: 38rpx;font-size: 36rpx;color: #e32f37}
.list_box_bottom_box:nth-child(3) view:nth-child(1){line-height: 38rpx;font-size: 36rpx;color: #fc7946}
.list_box_bottom_box_title{margin: 0 0 14rpx;font-weight: 400}
.list_box_bottom_box_depict{font-size: 24rpx;color: #999999}
.list_box_tail{margin: 30rpx 0 0 110rpx;width: 580rpx;}
.list_box_tail view:nth-child(1){font-size: 26rpx;color: #fc7946;line-height: 50rpx}
.list_box_tail view:nth-child(2){margin-right: 30rpx;width: 130rpx;height: 50rpx;background-color: #fc7946;font-size: 26rpx;color: #ffffff;text-align: center;line-height: 50rpx}
.addFollow{float: right;margin-top: 25.5rpx;width: 31rpx;height: 31rpx}
.existFollow{float: right;line-height: 82rpx;font-size: 26rpx;color: #b9b9b9}