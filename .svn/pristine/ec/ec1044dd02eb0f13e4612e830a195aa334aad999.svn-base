/* pages/my/my.wxss */

/* 头部 */

.head_top {
  box-sizing: border-box;
  padding: 40rpx 48rpx 38rpx;
  height: 184rpx;
  background-color: #2772ff;
}

.head_top_userHead {
  position: relative;
  width: 102rpx;
  height: 102rpx;
  border-radius: 10rpx;
  background-color: #fff;
  border: 2rpx solid #fff;
}

.head_top_userHead_img {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.head_top_userHead_vip {
  position: absolute;
  bottom: -10rpx;
  right: -10rpx;
  width: 34rpx;
  height: 34rpx;
}

.head_top_userName {
  margin-left: 36rpx;
}

.head_top_userName_name {
  width: 280rpx;
  line-height: 62rpx;
  font-size: 32rpx;
  color: #fff;
}

.head_top_userName_depict {
  max-width: 280rpx;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.5);
}

.head_top_userFollow_number, .head_top_userFans_number {
  line-height: 62rpx;
  font-size: 32rpx;
  color: #fff;
}

.head_top_userFollow_depict, .head_top_userFans_depict {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.5);
}

.head_top_iconLine {
  margin: 26rpx 44rpx 0;
  width: 2rpx;
  height: 60rpx;
  background-color: #689dff;
}

.head_bottom {
  box-sizing: border-box;
  padding: 30rpx 0;
  background-color: #145ce3;
}

.head_bottom_box {
  width: 33%;
}

.head_bottom_box:nth-child(2) {
  border-left: 2rpx solid #689dff;
  border-right: 2rpx solid #689dff;
}

.head_bottom_box_number {
  margin-bottom: 20rpx;
  line-height: 44rpx;
  font-size: 44rpx;
  font-weight: 600;
  color: #fff;
}

.head_bottom_box_depict {
  font-size: 26rpx;
  line-height: 26rpx;
  color: rgba(255, 255, 255, 0.5);
}

/* 功能列表 */

.list_box {
  box-sizing: border-box;
  padding: 30rpx 30rpx 0;
  height: 100rpx;
  background-color: #fff;
}

.list_box_icon {
  float: left;
  margin-right: 20rpx;
  width: 40rpx;
  height: 40rpx;
}

.list_box_title {
  float: left;
  line-height: 40rpx;
  font-size: 32rpx;
  color: #141414;
}

.list_box_arrow {
  float: right;
  position: relative;
  top: 3rpx;
  width: 19rpx;
  height: 34rpx;
}

.list_box_border {
  box-sizing: border-box;
  height: 70rpx;
  border-bottom: 2rpx solid #eee;
}

.list_box_depict {
  float: right;
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #b9b9b9;
}

.list_box_number {
  float: right;
  margin-right: 20rpx;
  padding: 7rpx 11rpx 8rpx;
  background-color: #e32f37;
  color: #fff;
  font-size: 22rpx;
  line-height: 25rpx;
  border-radius: 22rpx;
  min-width: 25rpx;
  text-align: center;
}

.account {
  margin-bottom: 20rpx;
}

.help {
  margin: 0 0 20rpx;
}

.signBox {
  background: #fff;
  width: 76%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0);
  padding: 35rpx;
  border: 1px solid #fff;
  border-radius: 30rpx;
}
.btnBox {
  margin-top:40rpx; 
  padding: 0 40rpx;
}
.readMask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999999999;
}
.cancelBtn,.confirmBtn {
  width: 40%;
  text-align: center;
  height: 70rpx;
  line-height: 70rpx;
  border: 2rpx solid #2772FF;
  border-radius: 40rpx;
}
.confirmBtn {
  background: #2772FF;
  color: #fff;
}
.signText {
  border: 2rpx solid #ddd;
  border-radius:20rpx; 
  padding:20rpx; 
}
.signTextBox {
  display: inline-block;
  max-width: 230rpx;
}
.modifyPen {
  width: 28rpx;
  margin-left: 20rpx;
  height: 28rpx;
}